@model List<MaintenanceServiceMVC.Models.Professional>

@{
    ViewData["Title"] = "Professionals";
}

<div class="container mt-4">
    <h2 class="mb-4">Find Professionals</h2>

    <!-- Filter and Search Form -->
    <div class="card mb-4">
        <div class="card-body">
            <form method="get" class="row g-3">
                <div class="col-md-3">
                    <label for="serviceId" class="form-label">Service Type</label>
                    <select name="serviceId" id="serviceId" class="form-select">
                        <option value="">All Services</option>
                        @if (ViewBag.Services != null)
                        {
                            foreach (var service in ViewBag.Services)
                            {
                                <option value="@service.ServiceId" selected="@(ViewBag.ServiceId == service.ServiceId)">@service.Name</option>
                            }
                        }
                    </select>
                </div>
                <div class="col-md-3">
                    <label for="searchTerm" class="form-label">Search by Name</label>
                    <input type="text" name="searchTerm" id="searchTerm" class="form-control" value="@ViewBag.SearchTerm" placeholder="Professional name...">
                </div>
                <div class="col-md-2">
                    <label for="sortBy" class="form-label">Sort By</label>
                    <select name="sortBy" id="sortBy" class="form-select">
                        <option value="name" selected="@(ViewBag.SortBy == "name")">Name</option>
                        <option value="price" selected="@(ViewBag.SortBy == "price")">Price</option>
                        <option value="rating" selected="@(ViewBag.SortBy == "rating")">Rating</option>
                    </select>
                </div>
                <div class="col-md-2">
                    <label class="form-label">&nbsp;</label>
                    <button type="submit" class="btn btn-primary d-block w-100">Filter</button>
                </div>
                <div class="col-md-2">
                    <label class="form-label">&nbsp;</label>
                    <a asp-action="Index" class="btn btn-outline-secondary d-block w-100">Clear</a>
                </div>
            </form>
        </div>
    </div>

    @if (Model == null || !Model.Any())
    {
        <div class="alert alert-info">No professionals found matching your criteria.</div>
    }
    else
    {
        <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
            @foreach (var professional in Model)
            {
                <div class="col">
                    <div class="card h-100 shadow-sm">
                        <div class="card-body">
                            <h5 class="card-title">@professional.User.FullName</h5>
                            <p class="card-text"><strong>Specialty:</strong> @professional.User.Professional</p>
                            <div class="d-flex justify-content-between align-items-center">
                                <div>
                                    <span class="badge bg-warning text-dark">
                                        <i class="bi bi-star-fill"></i> @professional.Rating
                                    </span>
                                </div>
                            </div>
                        </div>
                        <div class="card-footer">
                            <div class="d-grid gap-2">
                                @if (User.IsInRole("Customer"))
                                {
                                    <a asp-controller="ServiceRequests" asp-action="Create" asp-route-professionalId="@professional.ProfessionalId"
                                       class="btn btn-primary btn-sm">Request Service</a>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>