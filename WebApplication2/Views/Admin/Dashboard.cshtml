@model MaintenanceServiceMVC.Models.AdminDashboardViewModel

@{
    ViewData["Title"] = "Admin Dashboard";
}

<h2>Admin Dashboard</h2>

<div class="row">
    <div class="col-md-3">
        <div class="card bg-primary text-white mb-3">
            <div class="card-body">
                <h5>Total Users</h5>
                <h3>@Model.TotalUsers</h3>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card bg-success text-white mb-3">
            <div class="card-body">
                <h5>Customers</h5>
                <h3>@Model.TotalCustomers</h3>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card bg-info text-white mb-3">
            <div class="card-body">
                <h5>Professionals</h5>
                <h3>@Model.TotalProfessionals</h3>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card bg-warning text-dark mb-3">
            <div class="card-body">
                <h5>Services</h5>
                <h3>@Model.TotalServices</h3>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card bg-danger text-white mb-3">
            <div class="card-body">
                <h5>Requests</h5>
                <h3>@Model.TotalRequests</h3>
            </div>
        </div>
    </div>
</div>
