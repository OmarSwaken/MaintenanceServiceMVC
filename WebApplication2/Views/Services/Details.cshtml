@model MaintenanceServiceMVC.Models.Service

@{
    ViewData["Title"] = "Service Details";
}

<h2>@Model.Name</h2>

<div class="card mb-3 shadow-sm">
    <div class="card-body">
        <h5 class="card-title">Description</h5>
        <p class="card-text">@Model.Description</p>

        <h5 class="card-title">Base Price</h5>
        <p class="card-text">@Model.BasePrice.ToString("C")</p>

        <h5 class="card-title">Status</h5>
        <p class="card-text">
            @if (Model.IsActive)
            {
                <span class="badge bg-success">Active</span>
            }
            else
            {
                <span class="badge bg-secondary">Inactive</span>
            }
        </p>

        <h5 class="card-title">Created Date</h5>
        <p class="card-text">@Model.CreatedDate.ToString("yyyy-MM-dd")</p>
    </div>
</div>

@if (Model.ServiceRequests.Any())
{
    <h4>Service Requests</h4>
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Request Id</th>
                <th>Customer</th>
                <th>Date</th>
                <th>Status</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var req in Model.ServiceRequests)
            {
                <tr>
                    <td>@req.ServiceRequestId</td>
                    <td>@req.Customer?.Name</td>
                    <td>@req.RequestDate.ToString("yyyy-MM-dd")</td>
                    <td>@req.Status</td>
                </tr>
            }
        </tbody>
    </table>
}

@if (Model.ProfessionalServices.Any())
{
    <h4>Assigned Professionals</h4>
    <ul class="list-group">
        @foreach (var prof in Model.ProfessionalServices)
        {
            <li class="list-group-item">@prof.Professional?.Name</li>
        }
    </ul>
}

<div class="mt-3">
    <a asp-action="Index" class="btn btn-secondary">Back to Services</a>
    <a asp-action="Edit" asp-route-id="@Model.ServiceId" class="btn btn-warning">Edit</a>
</div>
