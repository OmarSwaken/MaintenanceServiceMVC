@model IEnumerable<MaintenanceServiceMVC.Models.Service>

@if (Model == null || !Model.Any())
{
    <div class="alert alert-info">
		No services available.
    </div>
}
else
{
    <table class="table table-bordered table-striped">
        <thead class="table-dark">
            <tr>
                <th>Name</th>
                <th>Description</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var service in Model)
            {
                <tr id="service-@service.ServiceId">
                    <td>@service.Name</td>
                    <td>@service.Description</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@service.ServiceId" class="btn btn-sm btn-primary">Edit</a>
                        <button class="btn btn-sm btn-danger delete-btn" data-id="@service.ServiceId">
                            Delete
                        </button>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    
}
