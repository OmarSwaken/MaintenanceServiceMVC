@model MaintenanceServiceMVC.Models.Service
@{
    ViewData["Title"] = "Edit Service";
}

<h2>Edit Service</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="ServiceId" />

    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="form-floating mb-3">
        <input asp-for="Name" class="form-control" placeholder="Service Name" />
        <label asp-for="Name">Service Name</label>
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-floating mb-3">
        <input asp-for="Description" class="form-control" placeholder="Description (Optional)" />
        <label asp-for="Description">Description (Optional)</label>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Save Changes</button>
    <a asp-action="AdminIndex" class="btn btn-secondary">Back to Services</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
