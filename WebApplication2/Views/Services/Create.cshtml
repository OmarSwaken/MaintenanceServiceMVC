@model MaintenanceServiceMVC.Models.Service
@{
    ViewData["Title"] = "Add New Service";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="Create" method="post" class="needs-validation" novalidate>
    <div class="mb-3 form-floating">
        <input asp-for="Name" class="form-control" placeholder="Service Name" />
        <label asp-for="Name">Service Name</label>
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="mb-3 form-floating">
        <textarea asp-for="Description" class="form-control" placeholder="Description"></textarea>
        <label asp-for="Description">Description</label>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-success">Add Service</button>
    <a asp-action="AdminIndex" class="btn btn-secondary ms-2">Back to Services</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
