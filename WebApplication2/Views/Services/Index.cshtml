@model IEnumerable<MaintenanceServiceMVC.Models.Service>

@{
    ViewData["Title"] = "Services";
}

<h2>Services</h2>

<div class="row row-cols-1 row-cols-md-3 g-4">
    @foreach (var service in Model)
    {
        <div class="col">
            <div class="card h-100 shadow-sm">
                <div class="card-body">
                    <h5 class="card-title">@service.Name</h5>
                    @if (!string.IsNullOrEmpty(service.Description))
                    {
                        <p class="card-text">@service.Description</p>
                    }
                    <p class="card-text"><strong>Price:</strong> @service.BasePrice.ToString("C")</p>
                    <p class="card-text">
                        <strong>Status:</strong>
                        @if (service.IsActive)
                        {
                            <span class="badge bg-success">Active</span>
                        }
                        else
                        {
                            <span class="badge bg-secondary">Inactive</span>
                        }
                    </p>
                </div>
                <div class="card-footer text-center">
                    <a asp-action="Details" asp-route-id="@service.ServiceId" class="btn btn-primary">View Details</a>
                </div>
            </div>
        </div>
    }
</div>