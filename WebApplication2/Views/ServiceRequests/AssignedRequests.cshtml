@model IEnumerable<MaintenanceServiceMVC.Models.ServiceRequest>

<h2>My Service Requests</h2>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Customer</th>
            <th>Description</th>
            <th>Address</th>
            <th>Request Date</th>
            <th>Scheduled Date</th>
            <th>Status / Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var request in Model)
        {
            <tr>
                <td>@request.Customer?.User?.FullName</td>
                <td>@request.Description</td>
                <td>@request.Address</td>
                <td>@request.RequestDate.ToString("g")</td>
                <td>@(request.ScheduledDate?.ToString("g") ?? "Not scheduled")</td>
                <td>
                    @if (request.Status == "Pending")
                    {
                        <form asp-action="UpdateStatus" method="post">
                            <input type="hidden" name="id" value="@request.ServiceRequestId" />
                            <button type="submit" name="status" value="Accepted" class="btn btn-success btn-sm">Accept</button>
                            <button type="submit" name="status" value="Rejected" class="btn btn-danger btn-sm">Reject</button>
                        </form>
                    }
                    else if (request.Status == "Accepted")
                    {
                        <span class="text-success fw-bold">Accepted</span>
                    }
                    else if (request.Status == "Rejected")
                    {
                        <span class="text-danger fw-bold">Rejected</span>
                    }
                    else
                    {
                        <span>@request.Status</span>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>
